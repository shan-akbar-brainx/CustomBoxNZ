{% if settings.product_show_menusidebar != blank %}
<div class="block block-nav sidebar-cate-toogle">
  <div class="block-title">
    <span {% if settings.language_enable %}data-translate="collections.sidebar.categories"{% endif %}>{{ 'collections.sidebar.categories' | t }}</span>
    <span class="collapse">
      <i class="icon-up-dir"></i>
      <i class="icon-down-dir"></i>
    </span>
  </div>
  <div class="sidebar-content block-content">
    {% include 'menu-category' with menu_name: settings.product_sidebar_menu %}
  </div>
</div>
{% endif %}
<div class="block">
  <div class="block-content">
    <div class="banner-sidebar">
    {% for i in (1..3) %}
      {% capture enable %}product_show_banner{{ i }}{% endcapture %} 
      {% capture image %}product-banner-sidebar{{ i }}.png{% endcapture %}
      {% capture content %}product_content_banner{{ i }}{% endcapture %} 
      {%if settings[enable] != blank %}
      <div class="item">
        <img src="{{ image | asset_url }}" alt=""/>
        <div class="content"> 
          {% if settings.language_enable %}
          <div class="lang1">{{ settings[content] | split: '[lang2]' | first }}</div>
          <div class="lang2">{{ settings[content] | split: '[lang2]' | last }}</div>
          {% else %}
          {{ settings[content] | split: '[lang2]' | first }}
          {% endif %}
        </div>
      </div>
      {% endif %}
    {% endfor %}
    </div>
  </div>
</div>
<div class="html_sidebar">
  {% if settings.language_enable %}
  <div class="lang1">{{ settings.product_html_siderbar| split: '|' | first }}</div>
  <div class="lang2">{{ settings.product_html_siderbar | split: '|' | last }}</div>
  {% else %}
  {{ settings.product_html_siderbar | split: '|' | first }}
  {% endif %}
</div>