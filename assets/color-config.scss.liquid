//************* Basic Color *************/

{% if settings.custom_general == '1' %} 
html, body {
  color: $BasicTextColor;
}
a {
  color: $BasicColorLink;
}
a:hover {
  color: $BasicColorLinkHover;
} 
.btn-button, .spr-button {
  background-color: $ButtonBackgroundColor;
  color: $ButtonTextColor;
  span {
    color: $ButtonTextColor;
  }
  &:hover {
    background-color: $ButtonHoverBackgroundColor;
    color: $ButtonHoverTextColor;
    border-color: $ButtonHoverBackgroundColor;
    span {
      color: $ButtonHoverTextColor;
    }
  }
  &.bordered {
    border: $ButtonBackgroundColor solid 2px;
    color: $ButtonBackgroundColor;
    span {
      color: $ButtonBackgroundColor;
    }
    &:hover {
      background-color: $ButtonHoverBackgroundColor;
      color: $ButtonHoverTextColor;
      border-color: $ButtonHoverBackgroundColor;
      span {
        color: $ButtonHoverTextColor;
      }
    }
  }
}  
.category-products {
  .products-grid {
    .item {
      .item-area,.item-area-list {
        .product-image-area {
          .action-list {
            .link-wishlist {
              color:$AddToWishlistLinkColor;
            }
          }
          .product-label {
            .onsale span {
              background-color: $SaleLabelBackgroundColor;
              color: $SaleLabelTextColor;
            }
          }
        }
        .actions { 
          .btn-cart {
            border-color: $AddToCartBorderColor;
            background-color: $AddToCartBackgroundColor;
            color: $AddToCartTextColor;
            &:hover {
              border-color:$AddToCartBorderHoverColor;
              background-color:$AddToCartBorderHoverColor;
              color:$AddToCartTextHoverColor;
            }
          }
          .quickview-icon {
            color:$QuickviewLinkColor;
          }
        }
      }
    }
  }
}   
.product-view .product-options-bottom .add-to-cart-box .button-wrapper .btn-cart {
  background-color:$AddToCartBackgroundColor;
  border-color: $AddToCartBorderColor;
  color: $AddToCartTextColor;
  &:hover {
    border-color:$AddToCartBorderHoverColor;
    background-color:$AddToCartBorderHoverColor;
    color:$AddToCartTextHoverColor;
  }
}
.cat-label-label1 {
  background-color: $Label1BackgroundColor;
  color: $Label1TextColor;
  &:before {
    border-top-color: $Label1BackgroundColor !important;
  }
}
.cat-label-label2 {
