}
.main-container .main-breadcrumbs { 
  color: $BreadcrumbsTextFontColor;
  ul li a {
    color: $BreadcrumbsLinksColor;
    &:hover {
      color: $BreadcrumbsLinksHoverColor;
    }
  }
