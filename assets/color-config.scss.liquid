//************* Header *************/  
{% if settings.custom_header == '1' %} 
.notice-toplink {
  background-color:$TopLinksBlockBackgroundColor;
  color:$TopLinksBlockFontColor;
  ul li a {color:$TopLinksBlockFontColor;} 
}
.template-index .dropdown-menu .menu-container>a {
    color: $HeaderLinksColor; 
}
.header-container {
  .search-area,.menu-icon{
    > a{
      color: $HeaderMiniCartIconColor;
    }
  } 
  .search-area .form-search {
    input {
      background-color: $HeaderSearchboxBackgroundColor;
      border-color: $HeaderSearchboxBorderColor; 
      color: $HeaderSearchboxTextFontColor;
    }  
    .search-button {
      background-color:$HeaderSearchboxButtonBgColor;
      color:$HeaderSearchboxButtonTextColor;
    }
  }
  &.type1 {
    background-color: $HeaderBackgroundColor;
    {%if settings.header_background_image_use != blank %}
    background-image: $HeaderBackgroundImage;
    background-repeat: repeat;
    {% endif %}   
  }
  &.type1,&.type3 {
    &.sticky-header {
      .header-wrapper {
        background-color: $StickyHeaderBackgroundColor;
      }
    }
  }
  &.type2,&.type4, &.type5, &.type6 {
    background-color: $HeaderBackgroundColor;
    {%if settings.header_background_image_use != blank %}
    background-image: $HeaderBackgroundImage;
    background-repeat: repeat;
    {% endif %}
    &.sticky-header{
      .wrapper-top-menu {
        background-color: $StickyHeaderBackgroundColor;
      }
    }
  }
  &.type2,&.type3,&.type4, &.type5, &.type6 {
    .header-top {
      background-color:$TopLinksBlockBackgroundColor;
      color:$TopLinksBlockFontColor;
      .top-link-area {
        .links li a {color:$TopLinksBlockFontColor;}
      }
      .header-link-area .toplink li a {
        color:$TopLinksBlockFontColor;
      }
    }
  }
  &.type3 {
    background-color: $HeaderBackgroundColor;
    {%if settings.header_background_image_use != blank %}
    background-image: $HeaderBackgroundImage;
    background-repeat: repeat;
    {% endif %}
    .header-wrapper .dropdown-menu .nav-icon {
      color: $HeaderLinksColor;
    }
  }
  .header {
    color: $HeaderTextColor;
    a {
      color: $HeaderLinksColor;
    }
  } 
} 
.template-index .dropdown-menu .menu-container>a { 
    border-color:$HeaderMenuBorderColor;
}
.main-navigation {
  .top-navigation {
    > li {
      > a {
        color:$HeaderTopMenuFontColor;
        &:hover {
          color:$HeaderTopMenuHoverFontColor;
        }
      }
    }
    &.side-menu {
      border-color:$HeaderMenuBorderColor;
      background-color: $HeaderMenuBgColor;
      >li .menu-wrap-sub {
        border-color:$HeaderMenuBorderColor;
      }
      li{
        a {
          color:$HeaderMenuFontColor;
          &:hover {
            color:$HeaderMenuHoverFontColor;
          }
        }
      }
      &:before {
        border-color: transparent transparent $HeaderMenuBgColor transparent;
      }
      &:after {
        border-color:transparent transparent $HeaderMenuBorderColor transparent
      }
    }
    .menu-wrap-sub {
      border-top-color:$HeaderTopMenuBorderColor;
    }
  }
}   
.mini-cart {
  .icon-cart-header {
    i {
      color:$HeaderMiniCartIconColor;
    }
    .cart-total {
      .cart-qty {
        background-color:$HeaderMiniCartQtyBackgroundColor;
        color:$HeaderMiniCartQtyFontColor;
      }
      .cart-price {
        color:$HeaderMiniCartFontColor;
        > span {color:$HeaderMiniCartPriceColor;}
      }
    }
  }
} 
.wishlist-area .mini-wishlist a {color:$HeaderMiniCartIconColor;}
{% endif %}
//************* Footer *************/  
{% if settings.custom_footer == '1' %}  
.footer-wrapper {
  .footer-top {
    background-color: $FooterTopBackgroundColor;
    color: $FooterTopTextFontColor;
    a {
      color: $FooterTopLinksColor;
      &:hover {
