    }
  }
  .footer-bottom {
    background-color: $FooterBottomBackgroundColor;
    color: $FooterBottomTextFontColor;
    a {
      color: $FooterBottomLinksColor;
      &:hover {
        color: $FooterBottomLinksHoverColor;
      }
