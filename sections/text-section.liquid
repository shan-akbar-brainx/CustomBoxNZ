{% assign col = 4 %} 
{% if section.blocks.size > 0 and section.blocks.size < 5 %}
{% assign col = 12 | divided_by: section.blocks.size %} 
{% endif %}
{% if section.blocks.size == 5%} 
{% assign col = 'tm-5' %}
{% endif %}
<style>
  .homepage-bar-{{ section.id }} .backgroud_home_bar{
    background-color: {{ section.settings.bg_content_color }};
  }
  .homepage-bar-{{ section.id }}{
    background-color: {{ section.settings.bg_section_color }};
  }
  .homepage-bar-{{ section.id }} .col-md-{{col}} i{
    color: {{ section.settings.icon_content_color }};
  }
  .homepage-bar-{{ section.id }} .col-md-{{col}} .text-area h3,
  .homepage-bar-{{ section.id }} .col-md-{{col}} .text-area p{
    color: {{ section.settings.text_content_color }};
  }
  .homepage-bar-{{ section.id }} .col-md-{{col}}{
    border-color: {{ section.settings.border_color_block }};
  }
</style>
<div class="home_bar_main" data-section-id="{{ section.id }}" data-section-type="home-bar-section"> 
  <div class="homepage-bar homepage-bar-{{ section.id }}" style="margin:{{section.settings.margin_section}};">
    <div class="container backgroud_home_bar">
      <div class="block_content">
        <div class="row">
          {% if section.blocks.size > 0 %} 
          {% for block in section.blocks %}
          <div class="col-md-{{col}}">
            <i class="{{ block.settings.item_icon }}"></i>
            <div class="text-area">
              <h3>
                {% if settings.language_enable %}
                <span class="lang1">{{ block.settings.item_title | split: '|' | first }}</span>
                <span class="lang2">{{ block.settings.item_title | split: '|' | last }}</span>
                {% else %}
                {{ block.settings.item_title | split: '|' | first }}
                {% endif %}
              </h3>
              <p>
                {% if settings.language_enable %}
                <span class="lang1">{{ block.settings.item_text | split: '|' | first }}</span>
                <span class="lang2">{{ block.settings.item_text | split: '|' | last }}</span>
                {% else %}
                {{ block.settings.item_text | split: '|' | first }}
                {% endif %}
              </p>
            </div> 
          </div>
          {% endfor %}
          {% else %}
          <p>No Content</p>
          {% endif %} 
          <div style="clear:both;"></div>
        </div>
      </div>
    </div>
  </div>
</div>
